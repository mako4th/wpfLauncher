<Window x:Class="wpfLauncher.MainWindow"
        x:Name="mainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfLauncher"
        mc:Ignorable="d"
        Title="MainWindow"
        WindowStyle="SingleBorderWindow" HorizontalAlignment="Center" VerticalAlignment="Center" d:DesignHeight="261.776" d:DesignWidth="507.088" HorizontalContentAlignment="Center">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border  Grid.Row="0" Grid.Column="0" Background="#2f5cb6" AllowDrop="true" Drop="OnDrop">
            <Image x:Name="Im1" MouseDown="Im1_MouseDown"/>
        </Border>
        <Border Grid.Row="0" Grid.Column="1"  Background="#1f3d7a"/>
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Background="#152951" />

    </Grid>
</Window>
